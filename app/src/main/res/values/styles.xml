<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <!-- Theme Created For AppBar -->
    <style name="AppBar_Warm" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/Orange_Warm</item>
    </style>
    <style name="AppBar_Cool" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/Blue_Cool</item>
    </style>

    <!-- Menu Items Theme In AppBar-->
    <style name="AppBar_Menu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/Off_White</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

</resources>
